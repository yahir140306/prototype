---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import InstallPWA from "../components/InstallPWA.astro";
import AccessibilityEnhancer from "../components/AccessibilityEnhancer.astro";
// import Nav2 from "../components/Nav.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- PWA Meta Tags -->
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="RANTU - Cuartos App" />
    <meta name="theme-color" content="#3B82F6" />
    <meta name="msapplication-TileColor" content="#3B82F6" />
    <meta name="format-detection" content="telephone=no" />

    <!-- SEO Optimizado para RANTU -->
    <meta
      name="description"
      content="RANTU - La mejor plataforma para encontrar y publicar cuartos disponibles. Renta habitaciones de forma fácil y segura."
    />
    <meta
      name="keywords"
      content="RANTU, cuartos, renta, alquiler, habitaciones, estudiantes, renta cuartos, buscar cuartos, publicar cuartos, app cuartos"
    />

    <!-- Open Graph (Facebook, WhatsApp) -->
    <meta property="og:title" content="RANTU - Encuentra tu cuarto ideal" />
    <meta
      property="og:description"
      content="La mejor app para encontrar y publicar cuartos disponibles. Más de 100 cuartos disponibles."
    />
    <meta
      property="og:image"
      content="https://project-e08a17adv-yahirs-projects-9e5377e4.vercel.app/Images/default.jpeg"
    />
    <meta
      property="og:url"
      content="https://project-e08a17adv-yahirs-projects-9e5377e4.vercel.app"
    />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="RANTU" />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="RANTU - Encuentra tu cuarto ideal" />
    <meta
      name="twitter:description"
      content="La mejor app para encontrar cuartos disponibles"
    />
    <meta
      name="twitter:image"
      content="https://project-e08a17adv-yahirs-projects-9e5377e4.vercel.app/Images/default.jpeg"
    />

    <!-- Autor y marca -->
    <meta name="author" content="RANTU Team" />
    <meta name="application-name" content="RANTU" />

    <!-- Viewport optimizations -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes, viewport-fit=cover"
    />

    <!-- Preconnect for better performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- PWA Icons -->
    <link rel="apple-touch-icon" href="/pwa-192x192.png" />
    <link rel="mask-icon" href="/favicon.svg" color="#3B82F6" />

    <meta name="generator" content={Astro.generator} />
    <title>RANTU - La mejor app para encontrar cuartos</title>

    <!-- Google Analytics (reemplaza con tu ID real) -->
